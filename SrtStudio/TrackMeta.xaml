             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SrtStudio"
             mc:Ignorable="d"
             d:DesignHeight="100" d:DesignWidth="100"
             HorizontalAlignment="Left" VerticalAlignment="Top">
    <Grid>
        <Rectangle Fill="#FF171717" Stroke="Black" />
        <TextBlock x:Name="trackName" Text="Track 1 - eng.srt" Margin="10,10,0,0" Foreground="White" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Top"/>
    </Grid>
</UserControl>

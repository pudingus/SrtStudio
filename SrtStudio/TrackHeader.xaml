<UserControl x:Class="SrtStudio.TrackHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SrtStudio"
             mc:Ignorable="d"
             d:DesignHeight="150" d:DesignWidth="150">
    <Grid>
        <!--<Border Background="#FF171717" BorderBrush="Black" BorderThickness="2"></Border>-->
        <Rectangle Fill="#FF171717" Stroke="Black" StrokeThickness="1" />
        <TextBlock x:Name="trackName" Text="Track 1 - eng.srt" Margin="10,10,10,2" Foreground="White" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Border x:Name="resizeBorder" Height="10" VerticalAlignment="Bottom" Cursor="SizeNS" Background="Transparent"/>
    </Grid>
</UserControl>
